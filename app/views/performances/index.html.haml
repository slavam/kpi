# coding: utf-8
%h1 Результаты деятельности 

.content
  %table.data
    %tr
      %th Период
      %th Подразделение
      %th Шаблон
      %th Блок
      %th Показатель
      %th Доля
      %th План
      %th Факт
      %th Процент выполнения
      %th KPI
    - for p in @performances
      %tr
        %td= p.period.description
        %td= p.division.name 
        %td= p.kpi_template.name
        %td= p.block.short_name
        %td= p.factor.short_name
        %td= p.rate
        %td= p.plan
        %td= p.fact
        %td= p.exec_percent
        %td= p.kpi
%br      
.actions
  = link_to 'Подготовить отчет', :action => 'get_report_params'
        